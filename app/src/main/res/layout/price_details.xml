    <LinearLayout
        android:id="@+id/booking_confirmation_price_detailslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cab_fair_details_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/booking_confirmation_details_cabFareDetails_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp2"
                android:text="Cab Fare Details :"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


            <LinearLayout
                android:id="@+id/booking_confirmation_details_cabFareDetails_FarePerKmTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp3"
                android:paddingLeft="@dimen/dp14"
                android:paddingRight="@dimen/dp14"
                android:paddingTop="@dimen/dp3">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dp2"
                    android:text="Fare/Km :"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/booking_confirmation_price_fareperkkm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="@dimen/dp2"
                    android:singleLine="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/booking_confirmation_details_cabFareDetails_estimatedKmCharged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp3"
                android:paddingLeft="@dimen/dp14"
                android:paddingRight="@dimen/dp14"
                android:paddingTop="@dimen/dp5">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dp2"
                    android:text="Estimated Km Charged :"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/booking_confirmation_price_estimatedkmCharged"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="@dimen/dp2"
                    android:singleLine="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/fixed_cost_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp3"
                android:paddingLeft="@dimen/dp14"
                android:paddingRight="@dimen/dp14"
                android:paddingTop="@dimen/dp5">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dp2"
                    android:text="Fixed Cost :"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/fixed_cost_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="@dimen/dp2"
                    android:singleLine="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp3"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp2"
            android:text="Additional Cost on Actual Basis :"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp14"
            android:paddingRight="@dimen/dp14">


            <TextView
                android:id="@+id/booking_confirmation_price_additionalCost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp2"


                />
            <!--android:text="* Base Price :\n* Base Price :\n* Base Price :\n* Base Price :\n* Base Price :"-->

            <!--<TextView
                android:id="@+id/booking_confirmation_price_baseprice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/dp2"
                android:singleLine="false"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_distance_details_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp2"
                android:text="Distance Details: "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:visibility="visible" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp14"
                android:paddingRight="@dimen/dp14"
                android:visibility="visible">


                <TextView
                    android:id="@+id/booking_confirmation_price_distanceDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dp2"

                    />
            </LinearLayout>
        </LinearLayout>
        <!--android:text="* Base Price :\n* Base Price :\n* Base Price :\n* Base Price :\n* Base Price :\n* Base Price :"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp2"
            android:text="Notes :"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp14"
            android:paddingRight="@dimen/dp14">


            <TextView
                android:id="@+id/booking_confirmation_price_notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp2"

                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

