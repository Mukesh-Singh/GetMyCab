<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">


            <AutoCompleteTextView
                android:id="@+id/one_way_travel_fromcity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:drawableRight="@drawable/map_pin_icon"
                android:hint="@string/fromcity"
                android:gravity="left|center_vertical"
                android:maxLines="2"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/light_black"

                />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <AutoCompleteTextView
                android:id="@+id/one_way_travel_tocity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/button_bg"
                android:drawableRight="@drawable/map_pin_icon1"
                android:gravity="left|center_vertical"
                android:hint="@string/tocity"
                android:maxLines="2"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/light_black"


                />
              <ProgressBar
                  android:id="@+id/one_way_travel_to_city_progress"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:visibility="gone"
                  />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/one_way_travel_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:drawableRight="@drawable/pickup_time_icon"
                android:gravity="left"
                android:hint="@string/traveldate"
                android:maxLines="2"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/light_black"

                />

            <TextView
                android:id="@+id/one_way_travel_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:drawableRight="@drawable/time_trevel_icon"
                android:gravity="left"
                android:hint="@string/traveltime"
                android:maxLines="2"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/light_black"


                />

        </LinearLayout>

       <EditText
            android:id="@+id/one_way_travel_duration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/button_bg"
            android:drawableRight="@drawable/trevel_duration_icon"
            android:gravity="left"
            android:hint="@string/duration"
            android:maxLines="1"
           android:inputType="number"
            android:visibility="visible"
           android:padding="@dimen/dp10"
           android:textSize="@dimen/text_size_18sp"
           android:textColor="@color/light_black"


            />

    </LinearLayout>
</LinearLayout>