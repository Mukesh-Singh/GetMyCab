<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:id="@+id/cab_search_result_item_cab_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/cab_search_result_item_rate"
            android:layout_toStartOf="@+id/cab_search_result_item_rate"
            android:maxLines="2"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/cab_search_result_item_rate"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/cab_search_result_item_seat"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/cab_search_result_item_total"
            android:layout_toStartOf="@+id/cab_search_result_item_total"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/cab_search_result_item_total"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:id="@+id/cab_search_result_item_fare_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Fare Details"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:textAppearanceMedium"
            android:background="@color/primary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Book Now"
            android:id="@+id/cab_search_result_item_booknow"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:background="@android:color/holo_green_dark"/>

    </LinearLayout>
    <include layout="@layout/price_details"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp4"
        android:background="@android:color/black"></View>


</LinearLayout>